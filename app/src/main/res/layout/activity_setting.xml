<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.activity.SettingActivity"
    tools:ignore="ContentDescription,RtlSymmetry,HardcodedText,ButtonStyle">

    <LinearLayout
        android:id="@+id/linearToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#03A9F4">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:padding="18dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:paddingEnd="@dimen/_50sdp"
            android:text="Settings"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15ssp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearToolbar"
        android:layout_above="@+id/btnSave"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Personal"
                    android:textAllCaps="true"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/_14ssp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextLabel">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edittextBikeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bike Name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textPersonName"
                        android:paddingBottom="@dimen/_17sdp"
                        android:textColorHint="@color/colorGrY"
                        android:textSize="@dimen/_12ssp"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:scrollbars="vertical"
                        android:paddingBottom="@dimen/_17sdp"
                        android:textColorHint="@color/colorGrY"
                        android:textSize="@dimen/_12ssp"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTrackerNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tracker Number"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:scrollbars="vertical"
                        android:paddingBottom="@dimen/_17sdp"
                        android:textColorHint="@color/colorGrY"
                        android:textSize="@dimen/_12ssp"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextLabel">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextBluetoothPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bluetooth PIN"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingBottom="@dimen/_15sdp"
                        android:textColorHint="@color/colorGrY"
                        android:textSize="@dimen/_12ssp"
                        tools:targetApi="lollipop" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15ssp"
                    android:padding="10dp"
                    android:textAllCaps="true"

                    android:textColor="@color/colorBlack"
                    android:letterSpacing="0.1"
                    android:text="Volumes Setting"
                    tools:targetApi="lollipop" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#68C6C1C1"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"

                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15ssp"
                            android:gravity="start"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorBlack"

                            android:text="Alert" />

                        <com.warkiz.widget.IndicatorSeekBar
                            android:id="@+id/seekbarAlert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            app:isb_indicator_color="#2196F3"
                            app:isb_indicator_text_color="@color/colorWhite"
                            app:isb_indicator_text_size="18sp"
                            app:isb_max="20"
                            app:isb_min="0"
                            app:isb_only_thumb_draggable="false"
                            app:isb_progress="25"
                            app:isb_seek_smoothly="true"
                            app:isb_show_indicator="rounded_rectangle"
                            app:isb_show_tick_marks_type="divider"
                            app:isb_show_tick_texts="true"
                            app:isb_thumb_color="#212121"
                            app:isb_thumb_size="12dp"
                            app:isb_tick_marks_color="@color/colorBlack"
                            app:isb_tick_marks_size="8dp"
                            app:isb_tick_texts_color="@color/colorBlack"
                            app:isb_tick_texts_size="15sp"
                            app:isb_ticks_count="5"
                            app:isb_track_background_color="#2196F3"
                            app:isb_track_background_size="2dp"
                            app:isb_track_progress_color="#050505"
                            app:isb_track_progress_size="3dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewDanger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#68C6C1C1"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"

                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15ssp"
                            android:gravity="start"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorBlack"

                            android:text="Danger" />

                        <com.warkiz.widget.IndicatorSeekBar
                            android:id="@+id/seekbarDanger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            app:isb_indicator_color="#2196F3"
                            app:isb_indicator_text_color="@color/colorWhite"
                            app:isb_indicator_text_size="18sp"
                            app:isb_max="20"
                            app:isb_min="0"
                            app:isb_only_thumb_draggable="false"
                            app:isb_progress="25"
                            app:isb_seek_smoothly="true"
                            app:isb_show_indicator="rounded_rectangle"
                            app:isb_show_tick_marks_type="divider"
                            app:isb_show_tick_texts="true"
                            app:isb_thumb_color="#212121"
                            app:isb_thumb_size="12dp"
                            app:isb_tick_marks_color="@color/colorBlack"
                            app:isb_tick_marks_size="8dp"
                            app:isb_tick_texts_color="@color/colorBlack"
                            app:isb_tick_texts_size="15sp"
                            app:isb_ticks_count="5"
                            app:isb_track_background_color="#2196F3"
                            app:isb_track_background_size="2dp"
                            app:isb_track_progress_color="#050505"
                            app:isb_track_progress_size="3dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#68C6C1C1"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"

                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_15ssp"
                            android:gravity="start"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/colorBlack"

                            android:text="Alarm" />

                        <com.warkiz.widget.IndicatorSeekBar
                            android:id="@+id/seekbarAlarm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            app:isb_indicator_color="#2196F3"
                            app:isb_indicator_text_color="@color/colorWhite"
                            app:isb_indicator_text_size="18sp"
                            app:isb_max="20"
                            app:isb_min="0"
                            app:isb_only_thumb_draggable="false"
                            app:isb_progress="25"
                            app:isb_seek_smoothly="true"
                            app:isb_show_indicator="rounded_rectangle"
                            app:isb_show_tick_marks_type="divider"
                            app:isb_show_tick_texts="true"
                            app:isb_thumb_color="#212121"
                            app:isb_thumb_size="12dp"
                            app:isb_tick_marks_color="@color/colorBlack"
                            app:isb_tick_marks_size="8dp"
                            app:isb_tick_texts_color="@color/colorBlack"
                            app:isb_tick_texts_size="15sp"
                            app:isb_tick_texts_typeface="monospace"
                            app:isb_track_background_color="#2196F3"
                            app:isb_track_background_size="2dp"
                            app:isb_track_progress_color="#050505"
                            app:isb_track_progress_size="3dp" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_shape"
        android:textStyle="bold"
        android:text="Save"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15ssp" />
</RelativeLayout>